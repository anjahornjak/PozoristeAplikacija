@using PozoristeAplikacija.Data.Enum;
@using PozoristeAplikacija.ViewModel;
@model CreatePredstavaViewModel

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<meta charset="UTF-8">
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input type="hidden" id="KorisnikAplikacijeId" name="KorisnikAplikacijeId" asp-for="KorisnikAplikacijeId" />
    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input asp-for="Naziv" class="form-control" placeholder="Unesite naziv predstave">
        <span asp-validation-for="Naziv" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Opis">Opis</label>
        <input asp-for="Opis" class="form-control" placeholder="Unesite opis predstave">
        <span asp-validation-for="Opis" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Tekst">Tekst</label>
        <input asp-for="Tekst" class="form-control" placeholder="Unesite tekstopisca">
        <span asp-validation-for="Tekst" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Rezija">Rezija</label>
        <input asp-for="Rezija" class="form-control" placeholder="Unesite režisera">
        <span asp-validation-for="Tekst" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Trajanje">Trajanje</label>
        <input asp-for="Trajanje" class="form-control" placeholder="Unesite vreme trajanja u minutima">
        <span asp-validation-for="Trajanje" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="VrstaPredstave">Vrsta Predstave</label>
         <select asp-for="VrstaPredstave" asp-items="@Html.GetEnumSelectList<VrstaPredstave>()" class="form-control">
            <option>--Select--</option>
         </select>
        <span asp-validation-for="VrstaPredstave" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Pozoriste.Naziv">Naziv pozorišta</label>
        <input asp-for="Pozoriste.Naziv" class="form-control" placeholder="Unesite pozorište">
        <span asp-validation-for="Pozoriste.Naziv" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Pozoriste.Opis">Opis pozorišta</label>
        <input asp-for="Pozoriste.Opis" class="form-control" placeholder="Unesite opis pozorišta">
        <span asp-validation-for="Pozoriste.Opis" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Pozoriste.Adresa.Ulica">Ulica</label>
        <input asp-for="Pozoriste.Adresa.Ulica" class="form-control" placeholder="Ulica">
        <span asp-validation-for="Pozoriste.Adresa.Ulica" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Pozoriste.Adresa.Grad">Grad</label>
        <input asp-for="Pozoriste.Adresa.Grad" class="form-control" placeholder="Grad">
        <span asp-validation-for="Pozoriste.Adresa.Grad" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Fotografija">Fotografija</label>
        <input asp-for="Fotografija" type ="file" class="form-control" placeholder="Unesite fotografiju predstave">
        <span asp-validation-for="Fotografija" class="text-danger"><</span>
    </div>
    <button type="potvrdi" class="btn btn-primary">Potvrdi</button>
</form>