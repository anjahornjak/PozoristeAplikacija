@{
}

<h1>Da li ste sigurni da želite da obrišete predstavu?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <input type="hidden" value="PozoristeId" id="PozoristeId" />
    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input asp-for="Naziv" class="form-control" placeholder="Naziv">
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis">Opis</label>
        <input asp-for="Opis" class="form-control" placeholder="Opis">
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Tekst">Tekst</label>
        <input asp-for="Tekst" class="form-control" placeholder="Tekst">
        <span asp-validation-for="Tekst" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rezija">Rezija</label>
        <input asp-for="Rezija" class="form-control" placeholder="Rezija">
        <span asp-validation-for="Rezija" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Trajanje">Trajanje</label>
        <input asp-for="Trajanje" class="form-control" placeholder="Trajanje">
        <span asp-validation-for="Trajanje" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pozoriste.Adresa.Ulica">Ulica</label>
        <input asp-for="Pozoriste.Adresa.Ulica" class="form-control" placeholder="Ulica">
        <span asp-validation-for="Pozoriste.Adresa.Ulica" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Pozoriste.Adresa.Grad">Grad</label>
        <input asp-for="Pozoriste.Adresa.Grad" class="form-control" placeholder="Grad">
        <span asp-validation-for="Pozoriste.Adresa.Grad" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VrstaPredstave">Vrsta Predstave</label>
        <select asp-for="VrstaPredstave" asp-items="@Html.GetEnumSelectList<VrstaPredstave>()" class="form-control">
            <option selected="selected" value="">--Select--</option>
        </select>
        <span asp-validation-for="VrstaPredstave" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Fotografija">Fotografija</label>
        <input asp-for="Fotografija" type="file" class="form-control" placeholder="Fotografija">
        <span asp-validation-for="Fotografija" class="text-danger"></span>

    </div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Potvrdi" class="btn btn-danger float-right mt-3" />
    </form>
</div>