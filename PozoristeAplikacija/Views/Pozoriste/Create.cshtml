@{
}
//<meta charset="UTF-8">
<form method="post" asp-action="Create" enctype = "multipart/form-data">
    <input type="hidden" id="KorisnikAplikacijeId" name="KorisnikAplikacijeId" asp-for="KorisnikAplikacijeId" />
    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input asp-for="Naziv" class="form-control" placeholder="Unesite naziv pozorišta">
        <span asp-validation-for="Naziv" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Opis">Opis</label>
        <input asp-for="Opis" class="form-control" placeholder="Unesite opis pozorišta">
        <span asp-validation-for="Opis" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Adresa.Ulica">Ulica</label>
        <input asp-for="Adresa.Ulica" class="form-control" placeholder="Unesite ulicu pozorišta">
        <span asp-validation-for="Adresa.Ulica" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Adresa.Grad">Grad</label>
        <input asp-for="Adresa.Grad" class="form-control" placeholder="Unesite grad">
        <span asp-validation-for="Adresa.Grad" class="text-danger"><</span>
    </div>
    <div class="form-group">
        <label asp-for="Fotografija">Fotografija</label>
        <input asp-for="Fotografija" type="file" class="form-control" placeholder="Unesite fotografiju predstave">
        <span asp-validation-for="Fotografija" class="text-danger"><</span>
    </div>
    <button type="potvrdi" class="btn btn-primary">Potvrdi</button>
</form>